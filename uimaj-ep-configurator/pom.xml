      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>.</directory>
        <includes>
          <include>plugin.xml</include>
          <include>icons/*.*</include>
        </includes>
      </resource>
    </resources>

    <plugins>
